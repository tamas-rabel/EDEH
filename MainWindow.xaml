<Window x:Class="explore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:explore"
        mc:Ignorable="d"
        Title="ED Exploration Helper - Use slider for volume control" Height="92" Width="600" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,0">
        <TextBlock x:Name="m_system" Margin="8,8,8,26" TextAlignment="Center" Text="Initializing" FontSize="16"/>
        <Slider Margin="8,0,8,4" VerticalAlignment="Bottom" Maximum="1" LargeChange="0.1" SmallChange="0.01" Value="{Binding m_volume}"></Slider>
    </Grid>
</Window>
